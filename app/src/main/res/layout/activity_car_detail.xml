<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.CarDetailActivity">

    <ImageView
        android:id="@+id/image_view_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_view_detail_branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:text="Marca: eeewree" />

    <TextView
        android:id="@+id/text_view_detail_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Marca: eeewree" />

    <TextView
        android:id="@+id/text_view_detail_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Marca: eeewree" />

    <TextView
        android:id="@+id/text_view_detail_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Marca: eeewree" />

</LinearLayout>